<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
        <param name="atlassian-data-center-compatible">true</param>
    </plugin-info>

    <!-- I18N -->
    <resource type="i18n" name="i18n" location="ru.andreymarkelov.atlas.plugins.jirabipperserver.i18n.jira-bipper-server"/>
    
    <!-- Web Resources -->
    <web-resource key="jira-bipper-server-resources" name="jira-bipper-server Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="jira-bipper-server.css" location="/css/jira-bipper-server.css"/>
        <resource type="download" name="jira-bipper-server.js" location="/js/jira-bipper-server.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>jira-bipper-server</context>
    </web-resource>

    <!-- Profile panel -->
    <web-panel key="bipper-profile-panel" location="webpanels.user.profile.summary.custom" weight="10">
        <condition class="ru.andreymarkelov.atlas.plugins.jirabipperserver.panel.ProfileNumberPanelCondition"/>
        <context-provider class="ru.andreymarkelov.atlas.plugins.jirabipperserver.panel.ProfileNumberPanel"/>
        <resource type="velocity" name="view" location="/ru/andreymarkelov/atlas/plugins/jirabipperserver/templates/profile/bipper-profile.vm"/>
    </web-panel>

    <!-- Component Imports -->
    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
</atlassian-plugin>
