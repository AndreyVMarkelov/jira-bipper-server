<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
        <param name="configure.url">/secure/BipperSettingsViewAction!default.jspa</param>
        <param name="atlassian-data-center-compatible">true</param>
    </plugin-info>

    <!-- I18N -->
    <resource type="i18n" name="i18n" location="ru.andreymarkelov.atlas.plugins.jirabipperserver.i18n.jira-bipper-server"/>
    
    <!-- Web Resources -->
    <web-resource key="jira-bipper-server-resources" name="Jira Bipper Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="jira-bipper-server.css" location="/css/jira-bipper-server.css"/>
        <resource type="download" name="jira-bipper-server.js" location="/js/jira-bipper-server.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>jira-bipper-server</context>
    </web-resource>
    <web-resource key="jira-bipper-server-pprofile-resources" name="Jira Bipper Profile Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:dialog2</dependency>
        <resource name="notification.js" type="download" location="/ru/andreymarkelov/atlas/plugins/jirabipperserver/js/jira-bipper-profile.js"/>
        <context>jira-bipper-profile</context>
    </web-resource>

    <!-- Profile Panel -->
    <web-panel key="bipper-profile-panel" name="Jira Bipper Profile Panel" location="webpanels.user.profile.summary.custom" weight="250">
        <context>atl.userprofile</context>
        <condition class="ru.andreymarkelov.atlas.plugins.jirabipperserver.panel.ProfileNumberPanelCondition"/>
        <context-provider class="ru.andreymarkelov.atlas.plugins.jirabipperserver.panel.ProfileNumberPanel"/>
        <resource type="velocity" name="view" location="/ru/andreymarkelov/atlas/plugins/jirabipperserver/templates/profile/bipper-profile.vm"/>
    </web-panel>

    <!-- Components -->
    <component key="bipper-auth-settings-manager" name="Jira Bipper Auth Manager" class="ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.impl.AuthManagerImpl">
        <interface>ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.AuthManager</interface>
    </component>
    <component key="bipper-contact-settings-manager" name="Jira Bipper Contacts Manager" class="ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.impl.ContactManagerImpl">
        <interface>ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.ContactManager</interface>
    </component>
    <component key="bipper-events-settings-manager" name="Jira Bipper Events Manager" class="ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.impl.EventsManagerImpl">
        <interface>ru.andreymarkelov.atlas.plugins.jirabipperserver.manager.EventsManager</interface>
    </component>
    <component key="tx-processor" name="Transactional Annotation Processor" class="com.atlassian.activeobjects.external.TransactionalAnnotationProcessor"/>

    <!-- Component Imports -->
    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
    <component-import key="ao" interface="com.atlassian.activeobjects.external.ActiveObjects"/>
    <component-import key="transactionTemplate" interface="com.atlassian.sal.api.transaction.TransactionTemplate"/>

    <!-- REST -->
    <rest key="bipper-rest-resource" name="Jira Bipper Rest Resource" path="/bipper" version="1.0">
        <description>Jira Bipper REST Resources.</description>
    </rest>

    <!-- AO -->
    <ao key="bipper-auth-ao-module" name="Jira Bipper AO Module">
        <entity>ru.andreymarkelov.atlas.plugins.jirabipperserver.data.ao.ContantAO</entity>
        <entity>ru.andreymarkelov.atlas.plugins.jirabipperserver.data.ao.EventSettingsAO</entity>
    </ao>

    <!-- Web Items -->
    <web-section key="bipper-admin-section" name="Jira Bipper Admin Section" location="admin_plugins_menu">
        <label key="ru.andreymarkelov.atlas.plugins.jira-bipper-server.admin.section"/>
        <tooltip key="ru.andreymarkelov.atlas.plugins.jira-bipper-server.admin.section.tooltip"/>
        <conditions type="AND">
            <condition class="com.atlassian.jira.plugin.webfragment.conditions.IsAdminCondition"/>
        </conditions>
    </web-section>
    <web-item key="bipper-admin-settings-link" name="Jira Bipper Settings" section="admin_plugins_menu/bipper-admin-section" weight="200">
        <label key="ru.andreymarkelov.atlas.plugins.jira-bipper-server.admin.settings.link"/>
        <description key="ru.andreymarkelov.atlas.plugins.jira-bipper-server.admin.settings.link.desc"/>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
            <param name="permission">admin</param>
        </condition>
        <link linkId="bipper-admin-settings-link">/secure/BipperSettingsViewAction!default.jspa</link>
    </web-item>

    <!-- Web Actions -->
    <webwork1 key="bipper-actions" name="Jira Bipper Web Actions" class="java.lang.Object">
        <actions>
            <action name="ru.andreymarkelov.atlas.plugins.jirabipperserver.action.admin.BeeperSettingsViewAction" alias="BipperSettingsViewAction">
                <view name="input">/ru/andreymarkelov/atlas/plugins/jirabipperserver/templates/admin/settings-view.vm</view>
                <view name="error">/ru/andreymarkelov/atlas/plugins/jirabipperserver/templates/admin/settings-view.vm</view>
                <view name="success">/ru/andreymarkelov/atlas/plugins/jirabipperserver/templates/admin/settings-view.vm</view>
                <view name="permissionviolation">/secure/views/permissionviolation.jsp</view>
            </action>
        </actions>
    </webwork1>
</atlassian-plugin>
